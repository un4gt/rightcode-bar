{
  "name": "rightcode-bar",
  "publisher": "tumuerzunong",
  "displayName": "rightcode-bar",
  "description": "show your rightcode subscriptions in vscode",
  "version": "0.0.4",
  "license": "MIT",
  "icon": "images/rightcode.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/un4gt/rightcode-bar.git"
  },
  "bugs": {
    "url": "https://github.com/un4gt/rightcode-bar/issues"
  },
  "homepage": "https://github.com/un4gt/rightcode-bar#readme",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:rightcode-bar.refresh",
    "onCommand:rightcode-bar.account.switch",
    "onCommand:rightcode-bar.openSettings",
    "onView:rightcodeBar.dashboard"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rightcodeBar",
          "title": "RightCode",
          "icon": "images/rightcode-activitybar.png"
        }
      ]
    },
    "views": {
      "rightcodeBar": [
        {
          "id": "rightcodeBar.dashboard",
          "name": "Dashboard",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "rightcode-bar.refresh",
        "title": "RightCode: Refresh Subscription"
      },
      {
        "command": "rightcode-bar.account.switch",
        "title": "RightCode: Switch Account",
        "icon": "$(account)"
      },
      {
        "command": "rightcode-bar.openSettings",
        "title": "RightCode: Open Settings"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rightcode-bar.account.switch",
          "when": "view == rightcodeBar.dashboard",
          "group": "navigation@1"
        },
        {
          "command": "rightcode-bar.openSettings",
          "when": "view == rightcodeBar.dashboard",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "RightCode Bar",
      "properties": {
        "rightcodeBar.accounts": {
          "type": "array",
          "default": [],
          "scope": "application",
          "markdownDescription": "RightCode accounts (multi-account). Each item is `{ \"alias\": \"...\", \"token\": \"...\" }`. Tokens are stored in `settings.json` in plain text.",
          "items": {
            "type": "object",
            "required": [
              "alias",
              "token"
            ],
            "properties": {
              "alias": {
                "type": "string",
                "description": "Account alias shown in the status bar/dashboard."
              },
              "token": {
                "type": "string",
                "description": "RightCode token used for `Authorization: Bearer <token>`."
              }
            }
          }
        },
        "rightcodeBar.activeAccount": {
          "type": "string",
          "default": "",
          "scope": "application",
          "description": "Active account alias (matches an item in rightcodeBar.accounts). Empty uses the first account."
        },
        "rightcodeBar.token": {
          "type": "string",
          "default": "",
          "scope": "application",
          "markdownDescription": "RightCode token used for `Authorization: Bearer <token>` (single-account fallback). For multi-account, use `rightcodeBar.accounts` + `rightcodeBar.activeAccount`. Stored in `settings.json` in plain text."
        },
        "rightcodeBar.refreshIntervalSeconds": {
          "type": "number",
          "default": 300,
          "minimum": 0,
          "scope": "application",
          "description": "Auto refresh interval in seconds (0 disables polling)."
        },
        "rightcodeBar.requestTimeoutMs": {
          "type": "number",
          "default": 15000,
          "minimum": 1000,
          "scope": "application",
          "description": "Request timeout in milliseconds."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
